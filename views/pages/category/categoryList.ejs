<%- include('../../partials/head');%> <%- include('../../partials/header');%>

<main class="d-flex h-100">
  <%- include('../../partials/sidebar');%>
  <div class="p-5 w-100">
    <h1 class="h3 mb-4">List all Categories</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(function(category) { %>
        <tr>
          <td>
            <a href="/category/update/<%= category._id %>"
              ><%= category.name %></a
            >
          </td>
          <td><%= category.isActive == true ? "✅" : "❌" %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</main>
<%- include('../../partials/footer');%>
