<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head', { title: "" }); %>
  </head>
  <body>
    <%- include('../../partials/header');%>
    <main>
      <div class="p-5 mb-4">
        <h1 class="h3 mb-4">Update Menu Item</h1>
        <form action="/menu/update/<%= menuItem._id %>" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Idli or Dosa"
              value="<%= menuItem.name %>"
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="description"
              placeholder="Enter description"
              value="<%= menuItem.description %>"
            >
<%= menuItem.description %></textarea
            >
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="price"
              placeholder="Enter Price"
              value="<%= menuItem.price %>"
            />
          </div>
          <div class="mb-3">
            <label for="categoryId" class="form-label">Category</label>
            <input
              type="text"
              class="form-control"
              id="categoryId"
              name="categoryId"
              placeholder="Enter Category"
              value="<%= menuItem.categoryId %>"
            />
          </div>
          <div class="mb-3">
            <label for="preparationTime" class="form-label"
              >Preparation Time</label
            >
            <input
              type="number"
              class="form-control"
              id="preparationTime"
              name="preparationTime"
              placeholder="Enter Preparation Time"
              value="<%= menuItem.preparationTime %>"
            />
          </div>
          <div class="form-check mb-3">
            <input
              class="form-check-input"
              type="checkbox"
              id="isVeg"
              name="isVeg"
              checked="<%= menuItem.isVeg ? 'checked' : '' %>"
            />
            <label class="form-check-label" for="isVeg">Is Veg</label>
          </div>
          <div class="form-check mb-3">
            <input
              class="form-check-input"
              type="checkbox"
              id="isAvailable"
              name="isAvailable"
              checked="<%= menuItem.isAvailable ? 'checked' : '' %>"
            />
            <label class="form-check-label" for="isAvailable"
              >Is Available</label
            >
          </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </main>
    <%- include('../../partials/footer');%>
  </body>
</html>
